---
import Cards from "./icon/Cards.astro";
import Mochila from "./icon/Mochila.astro";
import MercadoPago from "./icon/MercadoPago.astro";

const rectangulos = [
{
    titulo: "Cuotas sin interés",
    descripcion: "Podes abonar en 3, 6 y 9 cuotas sin interés.",
    icono: Cards
  },
  {
    titulo: "Descuento",
    descripcion: "Abonando por transferencia bancaria, tenes un descuento entre 35% al 50%.",
    icono: MercadoPago
  },
  {
    titulo: "Mochila botinera de regalo",
    descripcion: "Con tu compra de botines por pedido, te llevas una mochila botinera de regalo para llevar tus botines a todos lados.",
    icono: Mochila
  }
];
---

<section class="py-6 bg-white">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {rectangulos.map((rect) => (
        <div class="bg-gray-100 rounded-lg p-2 shadow-sm flex flex-col items-center ">
          <rect.icono />
          <h3 class="text-xl  font-semibold text-gray-900 mb-3 ">{rect.titulo}</h3>
          <p class="text-gray-700 text-center">{rect.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section>
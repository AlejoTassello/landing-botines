---
// Lista de videos de botines entregados
const videos = [
  { id: 1, url: "/video1.mp4", titulo: "Entregas" },
  { id: 2, url: "/video2.mp4", titulo: "Nike Phantom GT" },
  { id: 3, url: "/video3.mp4", titulo: "Nike Tiempo Legend 9" },
  { id: 4, url: "/video4.mp4", titulo: "Adidas Copa Mundial" },
];
---



<section class="py-12 bg-white">
  <div class=" mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-8">Botines Entregados</h2>
    
    <div  class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {videos.map((video) => {
        return (
          <div class="bg-white rounded-3xl shadow overflow-hidden transform transition duration-300 hover:scale-105" data-key={video.id}>
            <div class="relative h-80 aspect-w-16">
              <video
                class="w-full h-full object-cover"
                src={video.url}
                preload="metadata"
                muted
                playsinline
              >
                <track kind="captions" />
                Tu navegador no soporta el elemento de video.
              </video>
              <div class="absolute inset-0 flex items-center justify-center">
                <button class="bg-white bg-opacity-75 rounded-full p-4 text-gray-800 hover:bg-opacity-100 transition duration-300" onclick="this.closest('.aspect-w-16').querySelector('video').play()">
                  <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-player-play"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 4v16l13 -8z" /></svg>
                </button>
              </div>
            </div>
            <div class="p-6">
              <h3 class="font-semibold text-xl text-black">{video.titulo}</h3>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
  }
  .aspect-w-16 > * {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    object-fit: cover;
  }
</style>



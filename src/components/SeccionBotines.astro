---
import Botin from "./Botin.astro";

const botines = [
{ imagen: "/C1.webp", precio: 135, marca: "Adidas", modelo: "F50+ FG", description: "TALLES DISPONIBLES: 40ARG/8US/26CM", categoria: "Futbol" },
  { imagen: "/C2.webp", precio: 135, marca: "Nike", modelo: "Mercurial Superfly FG", description: "TALLES DISPONIBLES: 43ARG/10US/28CM.", categoria: "Futbol" },
  { imagen: "/C3.webp", precio: 135, marca: "Nike", modelo: "Mercurial Superfly FG", description: "TALLES DISPONIBLES: 42ARG/9.5US/27.5CM.", categoria: "Futbol" },
  { imagen: "/C4.webp", precio: 135, marca: "Adidas", modelo: "Copa Pure FG", description: "TALLES DISPONIBLES: 40.5ARG/8.5US/26.5CM.", categoria: "Futbol" },
  { imagen: "/C5.webp", precio: 135, marca: "Adidas", modelo: "F50 SG", description: "TALLES DISPONIBLES: 43ARG/10US/28CM.", categoria: "Futbol" },
  { imagen: "/C6.webp", precio: 135, marca: "Adidas", modelo: "Adipure FG", description: "40.5ARG/8.5US/26.5CM.", categoria: "Futbol" },
  { imagen: "/F50.webp", precio: 135, marca: "Adidas", modelo: "F50 FG", description: "TALLES DISPONIBLES: 41ARG/9US/27CM - 43ARG/10US/28CM - 44ARG/11US/29CM.", categoria: "Futbol" },
  { imagen: "/C8.webp", precio: 135, marca: "Nike", modelo: "Mercurial Vapor 16 FG", description: "TALLES DISPONIBLES: 44ARG/11US/29CM.", categoria: "Futbol" },
];
---

<!-- Importar estilos de Swiper -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />

<section class="py-12 bg-white">
  <div class="mx-auto px-8 ">
    <h2 class="sm:text-3xl font-bold text-center mb-8">Entrega Inmediata</h2>

    <!-- Swiper Carousel -->
    <div class="relative">
      <div class="swiper">
        <div class="swiper-wrapper">
          {botines.map((botin) => (
            <div class="swiper-slide flex">
              <Botin 
                imagen={botin.imagen}
                precio={botin.precio}
                marca={botin.marca}
                modelo={botin.modelo}
                categoria={botin.categoria}
                description={botin.description}
              />
            </div>
          ))}
        </div>
      </div>

      <!-- Botones de navegación (fuera de las imágenes) -->
      <div class="swiper-button-prev custom-swiper-button"></div>
      <div class="swiper-button-next custom-swiper-button"></div>
     
    </div>
  </div>

  <div class="flex justify-center mt-8">
    <a
      href="/GaleriaBotines"
      class="inline-flex items-center px-8 py-2 text-lg font-medium text-black bg-gray-100 rounded-3xl hover:bg-gray-300"
    >
      Ver Más
      <svg class="w-4 h-4 ml-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
      </svg>
    </a>
  </div>
</section>

<!-- Importar Swiper y activar el carrusel -->
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script type="module">
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.esm.browser.min.js';
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".swiper", {
      slidesPerView: 1, // En móviles
      spaceBetween: 20,
      loop: true,
      pagination: { el: ".swiper-pagination", clickable: true },
      navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
      breakpoints: {
        640: { slidesPerView: 2 }, // Tablets
        1024: { slidesPerView: 3 }, // Laptops
        1280: { slidesPerView: 4 }, // Pantallas grandes
      }
    });
  });
</script>

<!-- Estilos personalizados para Swiper -->
<style>

.swiper {
  padding: 15px; /* Espacio para que no se corten */
}

  /* Ajuste de los botones de navegación */
  .custom-swiper-button {
    color: black !important; /* Cambia el color de las flechas a negro */
    width: 40px;
    height: 40px;
  }

  .swiper-button-prev {
    left: -50px; /* Mueve la flecha izquierda más afuera */
  }

  .swiper-button-next {
    right: -50px; /* Mueve la flecha derecha más afuera */
  }

  
</style>


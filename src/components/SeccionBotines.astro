---
import Botin from './Botin.astro';

const botines = [
{ imagen: "/superfly4.webp", precio: 135.000 , marca: "Nike", modelo: "Superfly 4", description:"Diseñados para jugadores rápidos y habilidosos, los Nike Mercurial Superfly 4 ofrecen velocidad, precisión y comodidad.", categoria: "Futbol" },
  { imagen: "/Vapor16.webp", precio: 135.000 , marca: "Nike", modelo: "Vapor 16", description: "Diseñados para jugadores veloces y explosivos, los Nike Vapor 16 ofrecen una combinación perfecta de velocidad, agilidad y control.",categoria: "Futbol"},
  { imagen: "/F50.webp", precio: 135.000 , marca: "Adidas", modelo: "F50", description: "Diseñados para jugadores veloces y ágiles, los Adidas F50 ofrecen una combinación perfecta de velocidad, precisión y control.", categoria: "Futbol" },
  { imagen: "/gxIIsg.webp", precio: 135.000 , marca: "Nike", modelo: "Phantom GX II SG", description:"Diseñados para jugadores que buscan control y precisión, los Nike Phantom GX II SG ofrecen una experiencia de juego excepcional.", categoria: "Futbol" },
];
---

<section class="py-12 bg-white">
  <div class=" mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-8">Destacados</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {botines.map((botin) => (
        <Botin 
          imagen={botin.imagen}
          precio={botin.precio}
          marca={botin.marca}
          modelo={botin.modelo}
          categoria={botin.categoria}
          description={botin.description}
        />
      ))}
    </div>
  </div>
  <div class="flex justify-center mt-8">
    <a
      href="/GaleriaBotines"
      class="inline-flex items-center px-8 py-2 text-lg font-medium text-black bg-gray-100 rounded-3xl hover:bg-gray-300"
    >
      Ver Más
      <svg
        class="w-4 h-4 ml-4 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  </div>
</section>